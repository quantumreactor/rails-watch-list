
<div class="container">
<div class="card-trip">
  <%= cl_image_tag @list.photo.key, height: 300, crop: :fill %>
  <div class="card-trip-infos">
    <div>
      <h3> <%= @list.name %></h3>
      <p>Descripcion de la lista!</p>
    </div>
    <%= link_to '🗑️ Eliminar', list_path(@list), method: :delete, title: 'Eliminar esta lista', class: "btn btn-light font-size-2", data: { confirm: 'Esta seguro?'} %>
    
  </div>
</div>



<ul class="list-group">
<% @list.bookmarks.each do |bm| %>
<li class="list-group-item"> <span class="text-capitalize font-size-4 font-weight-bold"><%= bm.movie.title %> </span><br>
<%= bm.comment %>
<%= link_to '🗑️ Eliminar', bookmark_path(bm), method: :delete, title: 'Eliminar este marcador', class: "btn btn-light font-size-1"  %>
</li>
<% end %>
</ul>

<% if @bookmarks.nil? %>
<p> No bookmarks found </p>
<% end %>

<%= link_to '➕ Añadir marcador', new_list_bookmark_path(@list), class: "btn btn-light" %>

</div>
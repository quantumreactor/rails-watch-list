<!DOCTYPE html>
<html>
  <head>
    <title>RailsWatchList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  </head>

  <body>
  <div class="p-0 mb-2 bg-secondary bg-gradient">
  <%= link_to 'RailsWatchList', root_path, class: "btn btn-primary btn-lg" %> &nbsp;
  <%= link_to 'Mis listas', lists_path, class: "btn btn-light"  %> &nbsp;
  <%= link_to 'Crear lista', new_list_path, class: "btn btn-light"  %> &nbsp;
  </div>

    <%= yield %>
  </body>
</html>
